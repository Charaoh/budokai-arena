   <button class="btn btn-default fa fa-pencil-square btn-block" onclick="updatePanel(this);" id="1">Change User Password </button> 
   <button class="btn btn-default fa fa-pencil-square btn-block" data-toggle="modal" data-target="#new_post">Premium Features </button> 
   <button class="btn btn-default btn-block" onclick="updatePanel(this);" id="2">Ban/Unban user</button>
<button class="btn btn-default btn-block" onclick="updatePanel(this);" id="3">Mod/Unmod user</button>
<button class="btn btn-default btn-block" onclick="updatePanel(this);" id="4">Admin/unAdmin user</button>
<button class="btn btn-default btn-block" onclick="updatePanel(this);" id="6">Update Characters</button>
</div>
   </div>
   
                                                                <div class="list-group  ">

                                                                    <li class="list-group-item-user navbar-custom-titles text-center"><span class="open-s">User Panel</span>
                                                                    </li>
                                                                    <a href="/user/<%=@user.username%>" class="list-group-item noround text-center" title="Profile"><img class="img-game img-responsive center-block" src="<%=@user.avater%>"> <br> 
                                                                      <i class="fa fa-user"> <%=@user.username%></i></a>
                                                                    <li class="list-group-item text-center"> <b class="fa fa-level-up fa"> Level - <%=@user.rank%> </b>
                                                                        <div class="progress">
                                                                            <div class="progress-bar progress-bar-warning progress-bar-striped active cb" role="progressbar" aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: <%=@user.percent%>%">
                                                                                Next Rank:
                                                                                <%=@user.percent%>%
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                    <a href="/settings" class="list-group-item "> <b class=" fa fa-cogs open-s"> Control Panel</b></a>
                                                                    <a href="/messages" class="list-group-item"><span class="badge"><%=@user.messages.count(:read => false)%></span> <b class="fa fa-inbox open-s"> Private Messages</b></a>
                                                                    <a href="/friends" class="list-group-item"><span class="badge"><%=@user.friendships.all(:status => "friends").target.count(:updated_at.gt =>  30.minutes.ago)%></span> <b class="fa fa-users open-s"> Friends</b></a>
                                                                    </li>
                                                                    <a href="/logout" class="list-group-item "> <b class="fa fa-sign-out open-s"> Sign Out</b></a>
                                                                </div>

                                                                <% end %>
                                                        </div>
