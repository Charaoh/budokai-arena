  <div class="panel-heading noround navbar-custom">
    <div class="fa fa-angle-double-right title"> Quick Links</div>
  </div>
  <div class="panel-body">
   <button class="btn btn-default fa fa-pencil btn-block" data-toggle="modal" data-target="#new_post"> Make Post</button> 
